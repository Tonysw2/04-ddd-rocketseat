{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  
	"vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },

  "files": {
    "ignoreUnknown": false,
    "ignore": ["node_modules", "build"]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "indentWidth": 2,
    "lineEnding": "crlf"
  },

  "organizeImports": {
    "enabled": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  },

  "json": {
    "formatter": {
      "enabled": true
    }
  }
}
